@model IList<ShareModel.ProductShare>
@{
    ViewData["Title"] = "Home Page";
}
@foreach (var product in Model)
{
    <div class="col-3" style="float:left;margin-top:20px">
        <div class="card mb-3">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal" style="width:300px; height:60px;">
                    <label style="font-size:23px;color:steelblue;">@product.ProductName</label>
                </h4>
            </div>
            <img src="./img//@product.Image" alt="New york" style="height:400px;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <p style="font-size:20px; color:#a51313;"><b>Giá:@product.Price</b> VNĐ</p>
                    </div>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        <p style="font-size:20px; color:#a51313;"><b>@product.Description</b> </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


