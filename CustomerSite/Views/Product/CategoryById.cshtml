@model IList<ShareModel.ProductFromCategory>

@if (Model.Count() != 0)
{
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-3" style="float:left;margin-top:20px">
                <div class="card m-lg-3" style="background-color:#E8E8E8">
                    <div class="card-header" style="background-color: #696969; text-align: center; ">
                        <h4 class="my-0 font-weight-normal" style="width:300px; height:60px;">
                            <label style="font-size:23px;text-shadow: black 4px 5px 6px; color: #FFCC66;">@product.ProductName</label>
                        </h4>
                    </div>

                    <img src="@product.Img" alt="New york" style="height:450px;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <p style="font-size:20px; color:#a51313;"><b>Giá:@product.Price</b> VNĐ</p>
                            </div>                  
                        </div>
                    </div>
                </div>

            </div>

        }
    </div>
}
else
{
    <div class="row">
        <strong>Không có sản phẩm nào!</strong>
    </div>
}

