@model IList<ShareModel.ProductShare>
@{
    ViewData["Title"] = "Home Page";
}
@foreach (var product in Model)
{
<div class="col-3" style="float:left;margin-top:20px">
    <div class="card m-lg-3" style="background-color:#E8E8E8">
        <div class="card-header" style="background-color: #696969; text-align: center; ">
            <h4 class="my-0 font-weight-normal" style="width:300px; height:60px;">
                <label style="font-size:23px;  text-shadow: black 4px 5px 6px;
    color: #FFCC66;; text-align:center; ">@product.ProductName</label>
            </h4>
        </div>
        <img src="../img//@product.Image" alt="New york" style="height:400px;">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <p style="font-size:20px; color:#a51313;"><b>Giá:@product.Price</b> VNĐ</p>
                </div>
            </div>
            <div style="text-align:center;">
                <a asp-action="Details" asp-controller="Product" class="btn btn-success" asp-route-id="@product.ProductID">Xem thêm</a>
            </div>
        </div>
    </div>
</div>
}


