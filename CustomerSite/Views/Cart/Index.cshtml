@{
    ViewData["Title"] = "Cart Page";
}

@model List<ShareModel.CartItemShare>
@{ decimal sumPrice = 0;}
<div class="divider" style="text-align: center;"><span></span><span class="title-products" style="font-size:32px;color:crimson">Giỏ hàng</span><span></span></div>
<div>
    @foreach (var item in @Model)
    {
        <div class="container-fluid" style="margin-top:20px; margin-bottom:20px;">
            <div class="row">
                <div class="col-2">
                    <img src="@item.Image" alt="cartItemImage" style="width:150px" />
                </div>
                <div class="col">
                    <div class="row">
                        <label>Tên sản phẩm : </label>
                        <b style="margin-left:10px">@item.ProductName</b>
                    </div>
                    <div class="row">
                        <label> Giá tiền : </label>
                        <a style="margin-left:10px">@string.Concat(string.Format("{0:#,##0}", item.Price), " vnđ")</a>
                        @{sumPrice += item.Price * item.Quality;}
                        <label style="margin-left:100px">Số lượng: </label>
                        <a style="margin-left:10px">@item.Quality</a>
                    </div>
                    <div class="row" style="float:right">
                        <button type="button" onclick=" location.href = '@Url.Action("Delete", "Cart", new { id = item.ProductId})';" class="btn btn-outline-danger btn-lg">Xóa sản phẩm</button>
                    </div>
                </div>
            </div>
        </div>
    }
    }
    </div>
